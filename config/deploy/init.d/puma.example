#! /bin/sh

APP=/home/deploy/ziltag/current
PIDFILE=$APP/tmp/pids/puma.pid
USER=deploy

sig(){
  local signal=${1:-TERM}
  start-stop-daemon --stop --oknodo --pidfile $PIDFILE --signal $signal
}

case $1 in
  start )
    start-stop-daemon --start --oknodo \
      --pidfile $APP/tmp/pids/puma.pid \
      --chuid $USER \
      --chdir $APP \
      --startas bin/bundle -- exec puma
    ;;
  stop )
    sig TERM
    ;;
  restart )
    sig USR2
    ;;
  phased-restart )
    sig USR1
    ;;
esac