<section class="sec_user_profile" data-layout="full_interface">
  <div class="user_banner">
    <%= image_tag @user.cover_url, class: 'img-responsive user_banner_img' %>

    <!-- .edit_profile_link 這個連結應該是會員自己時，才會出現 -->
    <a href="/users/edit" class="edit_profile_link">
      <span class="icon_font">
        <i class="fa fa-camera fa-3x"></i>
        <span class="edit_text">編輯</span>
      </span>
    </a>

  </div><!-- /.user_banner -->

  <div class="user_basic_info">
    <div class="col-xs-8 col-sm-8 col-md-6">
      <div class="left_zone">
        <div class="profile_img">
          <a href="#"><%= image_tag @user.avatar_url %></a>

          <!-- .edit_profile_link 這個連結應該是會員自己時，才會出現 -->
          <a href="/users/edit" class="edit_profile_link">
            <span class="icon_font">
              <i class="fa fa-camera fa-3x"></i>
            </span>
          </a>

        </div><!-- /.profile_img -->
        <div class="following_and_follower">
          <span class="profile_username"><%= @user.username %> <%= link_to '編輯', edit_user_registration_path if @user == current_user %></span>
          <ul class="list-unstyled list-inline following_info_ul">
            <li>
              <%= link_to following_user_path(@user) do %>
                關注：<span class="num"><%= @user.leaders.count %></span>
              <% end %>
            </li>
            <li>
              <%= link_to leading_user_path(@user) do %>
                粉絲：<span class="num"><%= @user.followers.count %></span>
              <% end %>
            </li>
          </ul>
        </div><!-- /.following_and_follower -->
      </div><!-- /.left_zone -->
    </div>
    <div class="col-xs-4 col-sm-4 col-md-6">
      <div class="right_zone">
        <ul class="list-unstyled list-inline other_funcs_ul">
          <li><%= link_to_with_active_class '樂貼', @user %></li>
          <li><%= link_to_with_active_class '收藏', collecting_user_path(@user) %></li>
        </ul>
      </div><!-- /.right_zone -->
    </div>
  </div><!-- /.user_basic_info -->
</section><!-- /.sec_user_profile -->
