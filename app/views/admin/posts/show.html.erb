<p>
  <strong><%= Admin::Post.human_attribute_name(:user) %>:</strong>
  <%= link_to @admin_post.user, [:admin, @admin_post.user] %>
</p>

<p>
  <strong><%= Admin::Post.human_attribute_name(:title) %>:</strong>
  <%= @admin_post.title %>
</p>

<p>
  <strong><%= Admin::Post.human_attribute_name(:content) %>:</strong>
  <div class="well"><%= sanitize @admin_post.content %></div>
</p>

<p>
  <strong><%= Admin::Post.human_attribute_name(:tag_list) %>:</strong>
  <%= @admin_post.tag_list %>
</p>

<div class="row">
  <% @admin_post.photos.each do |photo| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to image_tag(photo.image_url, data: {sticker: ''}), [:admin, photo] %>
    </div>
  <% end %>
</div>

<hr>

<%= link_to t('scaffold.edit'), edit_admin_post_path(@admin_post), class: 'btn btn-default' %>
<%= link_to t('scaffold.back'), admin_posts_path, class: 'btn btn-default' %>
