<%= simple_form_for(@admin_comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.association :root, as: :select2, input_html: {data: {placeholder: '請選擇', allow_clear: true}} %>
    <%= f.association :photo, as: :select2 %>
    <%= f.input :text %>
    <%= f.input :x %>
    <%= f.input :y %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
