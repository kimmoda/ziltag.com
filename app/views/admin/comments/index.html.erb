<div class="page-header">
  <h1><%= Admin::Comment.model_name.human %> <%= link_to content_tag(:span, nil, class: 'glyphicon glyphicon-plus', title: t('scaffold.new')), new_admin_comment_path, class: 'btn btn-success btn-lg' %></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= Admin::Comment.human_attribute_name(:root) %></th>
      <th><%= Admin::Comment.human_attribute_name(:email) %></th>
      <th><%= Admin::Comment.human_attribute_name(:text) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_comments.each do |admin_comment| %>
      <tr>
        <td><%= link_to admin_comment.root, [:admin, admin_comment.root] if admin_comment.root %></td>
        <td><%= link_to_if admin_comment.user, admin_comment.email, [:admin, admin_comment.user] %></td>
        <td><%= admin_comment.text %></td>
        <td>
          <%= link_to icon_tag(:search), admin_comment, title: t('scaffold.show'), class: 'btn btn-info' %>
          <%= link_to icon_tag(:edit), edit_admin_comment_path(admin_comment), title: t('scaffold.edit'), class: 'btn btn-warning' %>
          <%= link_to icon_tag(:trash), admin_comment, title: t('scaffold.destroy'), class: 'btn btn-danger', method: :delete, data: { confirm: t('scaffold.are_you_sure') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admin_comments %>