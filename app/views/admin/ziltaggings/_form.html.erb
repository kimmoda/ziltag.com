<%= simple_form_for(@admin_ziltagging) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :ziltaggable_type, collection: %w[Post], include_blank: false %>
    <%= f.input :ziltaggable_id %>
    <%= f.association :photo, as: :select2 %>
    <%= f.input :x %>
    <%= f.input :y %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
