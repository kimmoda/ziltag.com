<div class="mdl-grid mdl-color--grey-100">
  <div class="mdl-cell mdl-cell--1-col"></div>
  <div class="mdl-cell mdl-cell--10-col">
    <div class="join">
      <h4 class="join__left">Become a content provider</h4>
      <div class="join__right">
        <%= form_for @user, as: :user, url: user_registration_path do |f| %>
          <div class="text-field">
            <%= f.text_field :email, class: 'text-field__input capsule', placeholder: 'Enter your email...' %>
            <%= f.hidden_field :type %>
            <%= f.submit 'JOIN', class: 'text-field__button capsule capsule--blue' %>
          </div>
        <% end %>
        <div class="join__bottom">By joining us to become a content provider, you agree to our term of use and provacy policy.</div>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--1-col"></div>
</div>

