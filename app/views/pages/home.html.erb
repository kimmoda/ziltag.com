<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--6-col">
    <div class="player">
      <video poster="https://cdn.selz.com/plyr/1.0/poster.jpg" controls crossorigin>
        <source src="https://cdn.selz.com/plyr/1.0/movie.mp4" type="video/mp4">
        <source src="https://cdn.selz.com/plyr/1.0/movie.webm" type="video/webm">
      </video>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--6-col">
    <%= form_for @user, as: :user, url: user_registration_path do |f| %>
      <div class="mdl-textfield mdl-js-textfield">
        <%= f.email_field :email, class: 'mdl-textfield__input' %>
        <label class="mdl-textfield__label" for="content_provider_email">Email...</label>
      </div>
      <%= f.hidden_field :type %>
      <%= f.submit 'sign up', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
    <% end %>
  </div>
</div>