run_in 'photos', 'index', ->
  $container = $('section.photos_index')
  imagesLoaded $container, ->
    $container.masonry
      columnWidth: 300
      gutter: 10
      itemSelector: '.ziltag_wrapper'

  scroll_to_bottom (page) ->
    $.get '<%= ::Rails.application.routes.url_helpers.photos_path %>', page: page, scroll: true, (data) ->
      $items = $(data)
      imagesLoaded $items, ->
        $container.append($items).masonry().masonry( 'appended', $items)