// 灰色樂貼滑鼠游標移過換成紅色的圖，移出再換回來

$(document).on('ready page:load', function(){

  $('[data-ziltag-sticker-article]').on('mouseover', '[data-ziltag-link]', function(){
    $(this).children("img").attr("src", "<%= asset_path('ziltag_sticker.png') %>");
    $("[data-ziltagging-id=" + $(this).data("ziltag-id") + "]").toggleClass("hover_item");
  });
  $('[data-ziltag-sticker-article]').on('mouseout', '[data-ziltag-link]', function(){
    $(this).children("img").attr("src", "<%= asset_path('ziltag_sticker_others.png') %>");
    $("[data-ziltagging-id=" + $(this).data("ziltag-id") + "]").toggleClass("hover_item");
  });

});

$(window).on('load page:load', function(){
});