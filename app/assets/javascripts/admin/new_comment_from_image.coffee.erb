# 用於在圖片上點擊座標後重導至新增留言頁
# <img src="blablabla" data-new-comment="/admin/comments/new">
$(document).on 'ready page:load', () ->
  $('img[data-new-comment]').click (e) ->
    window.location.href = URI('<%= Rails.application.routes.url_helpers.new_admin_comment_path %>').search
      photo_id: this.dataset.photoId
      x: e.offsetX
      y: e.offsetY